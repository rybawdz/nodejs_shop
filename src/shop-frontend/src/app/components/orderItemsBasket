function BasketForm({value}) {
    return (
        <form className="basketForm">
            {value}
            <input type="submit" value="Buy"/>
        </form>
    )
}

function Basket(value) {
    if(value.isArray()){
        content = <BasketForm value={value}/>
    }
    else {
        content = <p>No items in basket.</p>
    }
    return (
        <div className="basketBox">
            {content}
        </div>
    )
}

export default Basket;